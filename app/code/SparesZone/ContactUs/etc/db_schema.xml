<?xml version="1.0" encoding="UTF-8"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
      <table name="spareszone_contact_us" resource="default" engine="innodb" comment="SparesZone ContactUs Table">
        <column xsi:type="smallint" name="contact_id" padding="6" unsigned="false" nullable="false" identity="true" comment="Contact Id" />
        <column xsi:type="varchar" name="name" nullable="false" comment="Name" />
        <column xsi:type="varchar" name="email" nullable="false" comment="Email" />
        <column xsi:type="int" name="mobile_number" nullable="false" comment="Phone Number" />
        <column xsi:type="varchar" name="comment" nullable="false" comment="Message" />
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP"
            comment="Creation Time"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="contact_id" />
        </constraint>
      </table>
</schema>